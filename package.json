{
  "name": "mixin-patch",
  "description": "Patch the mixin problem #28799",
  "version": "0.2.0",
  "author": "Emilio Platzer <emilioplatzer@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "mixin-patch": "./bin/mixin-patch-cli.js"
  },
  "repository": "emilioplatzer/mixin-patch",
  "contributors": [
    {
      "name": "Emilio Platzer",
      "email": "emilioplatzer@gmail.com"
    }
  ],
  "dependencies": {
    "fs-extra": "~7.0.1"
  },
  "devDependencies": {
    "@types/express": "~4.16.1",
    "@types/fs-extra": "~5.0.5",
    "@types/js-yaml": "~3.12.0",
    "@types/mocha": "~5.2.6",
    "@types/node": "~11.10.4",
    "@types/send": "~0.14.4",
    "colors": "~1.3.3",
    "mocha": "~6.0.2",
    "nyc": "~13.3.0",
    "sinon": "~7.2.7",
    "source-map-support": "~0.5.10",
    "supertest": "~3.4.2",
    "ts-node": "~8.0.2",
    "typescript": "~3.3.3333",
    "best-globals": "~0.10.10",
    "discrepances": "~0.2.4"
  },
  "main": "dist/tool/mixin-patch.js",
  "types": "dist/tool/mixin-patch.d.ts",
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "tsc": "tsc",
    "test": "mocha --reporter spec --bail --check-leaks --exit work/test/",
    "test-ci": "node node_modules/nyc/bin/nyc --reporter=lcov --reporter=text-lcov node_modules/mocha/bin/_mocha --exit --check-leaks work/test/*.js",
    "test-cov": "nyc node_modules/mocha/bin/_mocha --exit --check-leaks work/test/*.js",
    "build": "tsc -p tsconfig-tool.json && tsc -p tsconfig-test.json",
    "build-without-err": "(tsc -p tsconfig-tool.json || echo \"continue w/error\") && (tsc -p tsconfig-test.json  || echo \"continue w/error\")"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/test"
    ],
    "include": [
      "dist/**/*.js"
    ],
    "x-require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "check-coverage": true
  },
  "qa-control": {
    "package-version": "0.3.0",
    "run-in": "server",
    "test-appveyor": true,
    "type": "lib",
    "stage": "designing",
    "coverage": 100
  }
}
